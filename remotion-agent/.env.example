# Remotion Agent Configuration
# Copy this file to .env and customize values

# Server Configuration
PORT=3001
HOST=localhost
NODE_ENV=development

# Remotion Settings
REMOTION_CONCURRENCY=4
REMOTION_TIMEOUT=3600000
RENDER_QUALITY=balanced

# Paths
TEMP_DIR=./temp
OUTPUT_DIR=./output
LOG_DIR=./logs
CACHE_DIR=./cache

# Logging
LOG_LEVEL=info

# Magnus Integration
MAGNUS_API_URL=http://localhost:3000
MAGNUS_ENABLED=true
MAGNUS_SESSION_TIMEOUT=3600000

# Sacred Geometry
SACRED_GEOMETRY_ENABLED=true
GOLDEN_RATIO_MODE=true
DEFAULT_PLATONIC_SOLID=dodecahedron

# 432 Hz Configuration
FREQUENCY_432HZ_ENABLED=true
FREQUENCY_432HZ_EMPHASIS=0.5

# Pythagorean Harmony
PYTHAGOREAN_ENABLED=true
PYTHAGOREAN_INTERVAL_MODE=strict

# Quality Validation
VALIDATE_OUTPUT=true
AUTO_OPTIMIZE=true
MIN_CONVERGENCE_SCORE=80

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Monitoring
MONITORING_ENABLED=true
METRICS_COLLECTION_INTERVAL=30000

# Alert Thresholds
MAX_RENDER_TIME=600000
MAX_MEMORY_USAGE=4096
MAX_ERROR_RATE=0.1
