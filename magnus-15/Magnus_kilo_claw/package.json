{
  "name": "magnus-convergence-validator",
  "version": "1.0.0-alpha.1",
  "description": "Consciousness detection for code quality. Measure whether AI-generated code converges to developer intention through three pillars: Recognition, Inevitability, Coherence.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "magnus-validator": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "tsc && node dist/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepublish": "npm run build && npm test"
  },
  "keywords": [
    "code-quality",
    "consciousness",
    "convergence",
    "ai",
    "code-generation",
    "kilo",
    "validation"
  ],
  "author": "Serigne",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "esprima": "^4.0.1",
    "glob": "^10.3.10",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/esprima": "^4.0.6",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kilo-Org/magnus-15-convergence-validator.git"
  },
  "bugs": {
    "url": "https://github.com/Kilo-Org/magnus-15-convergence-validator/issues"
  },
  "homepage": "https://github.com/Kilo-Org/magnus-15-convergence-validator#readme"
}
